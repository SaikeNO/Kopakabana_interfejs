<Window x:Class="Kopakabana.OpcjeDruzynDalej"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kopakabana"
        mc:Ignorable="d"
        Title="OpcjeDruzynDalej" Height="410" Width="789">
    <Grid>
        <Button x:Name="DodajDruzyne" Content="Dodaj" HorizontalAlignment="Left" Margin="29,42,0,0" VerticalAlignment="Top" FontSize="22" Width="78" Click="DodajDruzyne_Click"/>
        <Button x:Name="UsunDruzyne" Content="Usun" HorizontalAlignment="Left" Margin="29,80,0,0" VerticalAlignment="Top" FontSize="22" Width="78" />
        <Button x:Name="EdytujDruzyne" Content="Edytuj" HorizontalAlignment="Left" Margin="29,118,0,0" VerticalAlignment="Top" FontSize="22" Width="78" Click="EdytujDruzyne_Click" />
        <ListBox x:Name="Druzyny" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="126,42,54,63"/>

    </Grid>
</Window>
