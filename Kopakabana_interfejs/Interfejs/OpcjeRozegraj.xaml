        <RadioButton GroupName="druzyna" Content="t" x:Name="Druzyna1Kontrolka" IsChecked="True" HorizontalAlignment="Left" Margin="45,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.774,-2.062"/>
