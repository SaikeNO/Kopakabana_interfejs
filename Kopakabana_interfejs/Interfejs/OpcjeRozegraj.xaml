        <Button Content="Anuluj" IsCancel="True" HorizontalAlignment="Left" Margin="184,221,0,0" VerticalAlignment="Top" FontSize="22" Padding="20 5" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="33,267,0,0" TextWrapping="Wrap" Text="Wygrana Drużyna:" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.494,2.188" Grid.ColumnSpan="2"/>
